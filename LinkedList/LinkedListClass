using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace LinkedLists
{
    class LinkedList
    {
        private int length;
        public class Node
        {
            public object Content;
            public Node Next;
        }

        private Node head;

        public LinkedList()
        {
            length = 0;
            head = null;
        }

        public void InsertBeginning(object content)
        {
            Node newNode = new Node();
            newNode.Content = content;

            if (head == null)
            {
                head = newNode;
                length++;
            }
            else if (head != null)
            {
                newNode.Next = head;
                head = newNode;
                length++;
            }
        }

        public void InsertAfter(object content) {
            if (head == null)
            {
                head = new Node();
                head.Content = content;
                head.Next = null;
                length++;
            }
            else
            {
                Node add = new Node();
                add.Content = content;

                Node current = head;
                while (current.Next != null)
                {
                    current = current.Next;
                }
                current.Next = add;
                length++;
            }

        }

        public void RemoveBeginning()
        {
            //Still a bit confused about this concept
            length--;
        }

        public void RemoveAfter()
        {
            length--;
        }

        public int Length()
        {
            return length;
        }
    }
}
